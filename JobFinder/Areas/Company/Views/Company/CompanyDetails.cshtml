@using JobFinder.Areas.Company.Models;
@using System.Data;
@using System.Collections;
@model JobFinder.Areas.Company.Models.CompanyModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Company Detail</div>
                    <hr>
                    <form>
                        
                        <div class="form-group row">
                            <div class="col-sm-2">Company Name</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CompanyName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Size</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Size</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Description</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Description</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">ContactPersonName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.ContactPersonName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">ContactEmail</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.ContactEmail</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Salary</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.ContactPhone</div>
                        </div>
                      
                     
                            <td>
                                <a type="button" asp-area="Company" asp-controller="Company" asp-action="AddEditCompany" asp-route-CompanyID="@Model.CompanyID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>
                       
                        <a class="btn btn-outline-secondary" asp-area="Company" asp-controller="Company" asp-action="CompanyList">Back</a>
                       

                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>