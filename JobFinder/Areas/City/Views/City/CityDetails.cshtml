@using JobFinder.Areas.City.Models;
@using System.Data;
@using System.Collections;
@model JobFinder.Areas.City.Models.CityModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">City Details</div>
                    <hr>
                    <form>

                        <div class="form-group row">
                            <div class="col-sm-2">Country ID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CountryID</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">State ID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.StateID</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">City Name</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CityName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">City Code</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CityCode</div>
                        </div>



                        <td>
                            <a type="button" asp-area="City" asp-controller="City" asp-action="LOC_CityAddEdit" asp-route-CityID="@Model.CityID">
                                <button type="button" class="btn btn-outline-primary">Edit</button>
                            </a>

                        </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="City" asp-controller="City" asp-action="CityList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>