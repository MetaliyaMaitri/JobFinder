@using JobFinder.Areas.Country.Models;
@using System.Data;
@using System.Collections;
@model JobFinder.Areas.Country.Models.CountryModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Country Details</div>
                    <hr>
                    <form>

                        <div class="form-group row">
                            <div class="col-sm-2">Company Name</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CountryName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Country Code</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CountryCode</div>
                        </div>
                       

                       
                            <td>
                            <a type="button" asp-area="Country" asp-controller="Country" asp-action="LOC_CountryAddEdit" asp-route-CountryID="@Model.CountryID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="Country" asp-controller="Country" asp-action="CountryList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>