@using JobFinder.Areas.Country.Models;
@using System.Data;
@using System.Collections;

@model JobFinder.Areas.Country.Models.CountryModel;



<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title" style="color: #4B49AC";>Country Form</div>
                    <hr>
                    <form method ="post" asp-area="Country" asp-controller="Country" asp-action="SaveForAddEdit">
                        <input type="hidden" asp-for="CountryID" />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label>CountryName</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="CountryName" asp-for="CountryName" required="required">
                            <span asp-validation-for="CountryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>CountryCode</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="CountryCode" asp-for="CountryCode" required="required">
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <input type="submit" class=" btn btn-outline-primary"></input>
                            <a class="btn btn-outline-secondary" asp-area="Country" asp-controller="Country" asp-action="CountryList">Back</a>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
