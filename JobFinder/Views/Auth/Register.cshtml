@{
    Layout = "_UserLoginLayout";
}
@model JobFinder.Models.AuthModel;
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form" asp-controller="Auth" asp-action="RegisterSaveForAddEdit">
                    <div class="form-group">
                        <label for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="UserName" name="UserName" id="UserName" placeholder="Your Name" />
                    </div>
                    <div class="form-group">
                        <label for="UserEmail"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="UserEmail" name="UserEmail" id="UserEmail" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label for="UserPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="UserPassword" name="UserPassword" id="UserPassword" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label for="UserPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" asp-for="UserPassword" name="UserPassword" id="UserPassword" placeholder="Repeat your password" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/UserLoginLayout/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
